@import "../../wxParse/wxParse.wxss";

.article-cover {
  position: relative;
  height: 460rpx;
}

.article-cover image {
  display: block;
  width: 100%;
  height: 100%;
}

.title-warp {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 30rpx 40rpx;
  width: 100%;
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.5)));
}

.title-warp .kind-name {
  font-size: 36rpx;
  color: #fff;
  display: block;
  opacity: 0.8;
  margin-bottom: 14rpx;
  padding-left: 6rpx;
}

.title-warp .title {
  font-size: 46rpx;
  display: block;
  color: #fff;
  font-weight: bold;
}

.article-warp .guide {
  padding: 40rpx 30rpx 10rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #666;
  letter-spacing: 0.05rem;
}

.article-main {
  padding: 40rpx 30rpx;
}

.article-main .photo-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.article-main .photo-description {
  display: block;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #666;
  letter-spacing: 0.05rem;
  padding: 20rpx 0;
}

.article-main image {
  display: block;
  width: 100% !important;
  border-radius: 10rpx;
}

.end {
  font-size: 24rpx;
  color: #333;
  text-align: right;
  padding: 20rpx;
  padding-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
}
.end .views{
  color: #666;
}

/*底部操作栏*/

.tool-bar {
  height: 98rpx;
  position: fixed;
  bottom: -120rpx;
  width: 100%;
  left: 0;
  background: #fff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  transition: 0.3s bottom ease-out;
  z-index: 10;
}

.tool-bar.active {
  bottom: 0rpx;
}

.tool-bar .tool button {
  top: 0;
  left: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  display: block;
  opacity: 0;
  z-index: 2;
}

.tool-bar .tool {
  position: relative;
  width: 33.33%;
  float: left;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 0 4rpx;
}

.tool-bar .tool.active {
  color: #e51e30;
}

.tool-bar image {
  display: block;
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto;
}
