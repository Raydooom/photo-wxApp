page {
  background: #ededed;
}

.list {
  border-top: 1px solid #ededed;
  background: #fff;
  margin-bottom: 12rpx;
}

.date-bar {
  padding: 0 24rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.image {
  width: 750rpx;
}

.text-wrap {
  padding: 20rpx 24rpx 10rpx;
}

.main-text {
  font-size: 30rpx;
  color: #333;
  display: block;
  line-height: 1.4;
}

.handle-bar {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 24rpx;
  align-items: center;
}

.kind-text {
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #999;
  display: block;
}

.praise {
  display: block;
  font-size: 30rpx;
  color: #999;
  width: 100rpx;
}

.praise image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
